#!/usr/bin/env bash
# setup

if ! dpkg -l | grep -q libmysqlclient-dev; then
    echo "libmysqlclient-dev is not installed. Installing..."
    sudo apt update
    sudo apt install libmysqlclient-dev --yes
fi

